        <activity
            android:name=".Beignet"
            android:label="@string/title_activity_beignet" >
        </activity>
        <activity
            android:name=".CoffeeMug"
            android:label="@string/title_activity_coffee_mug" >
        </activity>
        <activity
            android:name=".CoffeeGrounds"
            android:label="@string/title_activity_coffee_grounds" >
        </activity>
        <activity
            android:name=".CoffeeTumbler"
            android:label="@string/title_activity_coffee_tumbler" >
